apiVersion: apps/v1
kind: Deployment
metadata:
name: hello-world-service
labels:
  app: hello-world-service
spec:
strategy:
  type: Recreate
template:
  metadata:
    labels:
      app: hello-world-service
  spec:
    containers:
    - name: hello-world
      image: hello-world/hello:latest
      imagePullPolicy: Always
      ports:
      - containerPort: 80